---
interface Props {
	id?: string;
	links: Array<{
		href: string;
		label: string;
	}>;
}

const { id, links } = Astro.props;
---

<section 
	id={id}
	class="w-full max-w-screen mx-auto h-dvh flex items-center justify-center snap-start snap-always bg-black p-2 md:p-4 lg:p-8"
>
	<div class="flex flex-col gap-0 w-full max-w-2xl">
		{links.map((link, index) => (
			<>
				<a 
					href={link.href} 
					class="flex items-center justify-between w-full py-4 text-white hover:opacity-70 transition-opacity"
				>
					<span class="text-base md:text-4xl font-medium">{link.label}</span>
					<span class="text-base md:text-4xl text-[#ca2c1e]">â†’</span>
				</a>
				{index < links.length - 1 && (
					<div class="w-full h-px bg-gray-600"></div>
				)}
			</>
		))}
	</div>
</section>
