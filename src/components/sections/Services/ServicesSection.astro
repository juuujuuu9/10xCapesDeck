---
import ServiceCard from './ServiceCard.astro';
---

<section class="w-full bg-black max-w-screen mx-auto h-dvh flex flex-col gap-4 items-stretch justify-between snap-start snap-always px-2 md:px-4 lg:p-8">
	<!-- Mobile: All 5 cards in single container for equal height distribution -->
	<div class="md:hidden flex flex-col gap-2 w-full flex-1 items-stretch min-h-0">
		<ServiceCard 
			title="creative" 
			tags={['video', 'creative', 'design', '3d']} 
			backgroundImage="/wp-content/uploads/2025/03/CLEW-CarHero-Horz.00_00_02_04.Still001.jpg"
		/>
		<ServiceCard 
			title="social" 
			tags={['content management', 'influencers', 'growth', 'network']} 
			backgroundImage="/wp-content/uploads/2025/09/Influencers-phones-1.png"
		/>
		<ServiceCard 
			title="strategy" 
			tags={['copywriting', 'brand positioning', 'campaigns']} 
			backgroundImage="/wp-content/uploads/2025/09/iyf-hero.jpg"
		/>
		<ServiceCard 
			title="experiential" 
			tags={['production', 'interactive media', 'activations', 'moments', 'creative']} 
			backgroundImage="/wp-content/uploads/2025/08/Derrick-Rose.jpg"
		/>
		<ServiceCard 
			title="paid media" 
			tags={['outdoor', 'seo/sem', 'digital', 'influencers', 'email']} 
			backgroundImage="/wp-content/uploads/2025/09/vegas-billboard.jpg"
		/>
	</div>
	<!-- Desktop: Two-row layout -->
	<div class="hidden md:flex flex-col gap-4 w-full flex-1 items-stretch min-h-0">
		<div class="flex flex-row gap-4 w-full flex-1 items-stretch min-h-0">
			<ServiceCard 
				title="creative" 
				tags={['video', 'creative', 'design', '3d']} 
				backgroundImage="/wp-content/uploads/2025/03/CLEW-CarHero-Horz.00_00_02_04.Still001.jpg"
			/>
			<ServiceCard 
				title="social" 
				tags={['content management', 'influencers', 'growth', 'network']} 
				backgroundImage="/wp-content/uploads/2025/09/Influencers-phones-1.png"
			/>
		</div>
		<div class="flex flex-row gap-4 w-full flex-1 items-stretch min-h-0">
			<ServiceCard 
				title="strategy" 
				tags={['copywriting', 'brand positioning', 'campaigns']} 
				backgroundImage="/wp-content/uploads/2025/09/iyf-hero.jpg"
			/>
			<ServiceCard 
				title="experiential" 
				tags={['production', 'interactive media', 'activations', 'moments', 'creative']} 
				backgroundImage="/wp-content/uploads/2025/08/Derrick-Rose.jpg"
			/>
			<ServiceCard 
				title="paid media" 
				tags={['outdoor', 'seo/sem', 'digital', 'influencers', 'email']} 
				backgroundImage="/wp-content/uploads/2025/09/vegas-billboard.jpg"
			/>
		</div>
	</div>
	<div class="border-2 border-[#2a2a2a] p-8 lg:flex hidden flex-col w-full md:h-full items-center justify-center rounded-3xl md:max-h-[60px] min-h-[60px]">
		<span class="text-white lowercase xl:text-[24px] text-[20px] flex flex-row gap-3"><strong>AI IS HERE.</strong> <em> IT'S NOT SOMETHING WE FEAR BUT USE AS A TOOL TO CREATE BETTER WORKFLOWS AND ENGAGING CONTENT.</em></span>
	</div>
</section>

