---
import { LazyImage } from '../../LazyImage.tsx';

export interface Props {
	phoneImage: {
		src: string;
		alt: string;
		pullZone?: string;
		priority?: boolean;
		width?: number;
		quality?: number;
	};
	id?: string;
}

const { phoneImage, id } = Astro.props;
---

<section id={id} class="w-full h-dvh max-h-dvh p-2 md:p-4 md:pt-20 pt-10 pb-8 md:pb-4 lg:p-8 lg:p-8 snap-start snap-always flex flex-col overflow-hidden box-border bg-[#f4f4f0]">
	<div class="flex-1 min-h-0 flex flex-col xl:flex-row gap-2 md:gap-4 lg:gap-8">
		{/* Phone Mockup - appears at top on mobile, left on desktop */}
		<div class="flex-1 min-h-0 relative flex items-center justify-center">
			<LazyImage
				client:visible
				src={phoneImage.src}
				alt={phoneImage.alt}
				pullZone={phoneImage.pullZone}
				priority={phoneImage.priority || false}
				width={phoneImage.width || 800}
				quality={phoneImage.quality || 85}
				className="w-full h-full object-contain"
			/>
		</div>

		{/* Text Content - appears at bottom on mobile, right on desktop */}
		<div class="flex-1 min-h-0 flex flex-col items-center xl:items-start justify-center">
			<div class="space-y-3 md:space-y-4 lg:space-y-5 xl:space-y-6 max-w-[650px] w-full text-center xl:text-left">
				{/* Main Title */}
				<div>
					<h2 class="text-[#010101] xl:text-[80px] lg:text-[48px] md:text-[36px] text-[26px] font-bold leading-tight italic lowercase">
						ignite your fire
					</h2>
					<h3 class="text-[#010101] xl:text-[48px] lg:text-[28px] md:text-[24px] text-[20px] font-bold leading-tight lowercase">
						social results
					</h3>
				</div>

				{/* Stats */}
				<div class="space-y-2 md:space-y-3 lg:space-y-3 xl:space-y-4">
					{/* Likes */}
					<div class="flex items-center justify-center xl:justify-start gap-2 md:gap-3 lg:gap-3 xl:gap-4">
						<div class="w-6 h-6 md:w-7 md:h-7 lg:w-7 lg:h-7 xl:w-8 xl:h-8 rounded-full bg-[#010101] flex items-center justify-center shrink-0">
							<svg class="w-3 h-3 md:w-3.5 md:h-3.5 lg:w-3.5 lg:h-3.5 xl:w-4 xl:h-4" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M12 21.35L10.55 20.03C5.4 15.36 2 12.27 2 8.5C2 5.41 4.42 3 7.5 3C9.24 3 10.91 3.81 12 5.08C13.09 3.81 14.76 3 16.5 3C19.58 3 22 5.41 22 8.5C22 12.27 18.6 15.36 13.45 20.03L12 21.35Z" fill="white"/>
							</svg>
						</div>
						<p class="text-[#010101] xl:text-[32px] lg:text-[18px] md:text-[16px] text-[14px] font-semibold lowercase">
							likes:<span class="text-[#d63a2e] ml-1 md:ml-1.5 lg:ml-1.5 xl:ml-2 font-bold">1m+</span>
						</p>
					</div>

					{/* Views */}
					<div class="flex items-center justify-center xl:justify-start gap-2 md:gap-3 lg:gap-3 xl:gap-4">
						<div class="w-6 h-6 md:w-7 md:h-7 lg:w-7 lg:h-7 xl:w-8 xl:h-8 rounded-full bg-[#010101] flex items-center justify-center shrink-0">
							<svg class="w-3 h-3 md:w-3.5 md:h-3.5 lg:w-3.5 lg:h-3.5 xl:w-4 xl:h-4" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M12 4.5C7 4.5 2.73 7.61 1 12C2.73 16.39 7 19.5 12 19.5C17 19.5 21.27 16.39 23 12C21.27 7.61 17 4.5 12 4.5ZM12 17C9.24 17 7 14.76 7 12C7 9.24 9.24 7 12 7C14.76 7 17 9.24 17 12C17 14.76 14.76 17 12 17ZM12 9C10.34 9 9 10.34 9 12C9 13.66 10.34 15 12 15C13.66 15 15 13.66 15 12C15 10.34 13.66 9 12 9Z" fill="white"/>
							</svg>
						</div>
						<p class="text-[#010101] xl:text-[32px] lg:text-[18px] md:text-[16px] text-[14px] font-semibold lowercase">
							views:<span class="text-[#d63a2e] ml-1 md:ml-1.5 lg:ml-1.5 xl:ml-2 font-bold">30m+</span>
						</p>
					</div>

					{/* Comments */}
					<div class="flex items-center justify-center xl:justify-start gap-2 md:gap-3 lg:gap-3 xl:gap-4">
						<div class="w-6 h-6 md:w-7 md:h-7 lg:w-7 lg:h-7 xl:w-8 xl:h-8 rounded-full bg-[#010101] flex items-center justify-center shrink-0">
							<svg class="w-3 h-3 md:w-3.5 md:h-3.5 lg:w-3.5 lg:h-3.5 xl:w-4 xl:h-4" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M20 2H4C2.9 2 2.01 2.9 2.01 4L2 22L6 18H20C21.1 18 22 17.1 22 16V4C22 2.9 21.1 2 20 2ZM18 14H6V12H18V14ZM18 11H6V9H18V11ZM18 8H6V6H18V8Z" fill="white"/>
							</svg>
						</div>
						<p class="text-[#010101] xl:text-[32px] lg:text-[18px] md:text-[16px] text-[14px] font-semibold lowercase">
							comments:<span class="text-[#d63a2e] ml-1 md:ml-1.5 lg:ml-1.5 xl:ml-2 font-bold">50k+</span>
						</p>
					</div>

					{/* Impressions */}
					<div class="flex items-center justify-center xl:justify-start gap-2 md:gap-3 lg:gap-3 xl:gap-4">
						<div class="w-6 h-6 md:w-7 md:h-7 lg:w-7 lg:h-7 xl:w-8 xl:h-8 rounded-full bg-[#010101] flex items-center justify-center shrink-0">
							<svg class="w-3 h-3 md:w-3.5 md:h-3.5 lg:w-3.5 lg:h-3.5 xl:w-4 xl:h-4" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M12 2C6.48 2 2 6.48 2 12C2 17.52 6.48 22 12 22C17.52 22 22 17.52 22 12C22 6.48 17.52 2 12 2ZM13 17H11V15H13V17ZM13 13H11V7H13V13Z" fill="white"/>
							</svg>
						</div>
						<p class="text-[#010101] xl:text-[32px] lg:text-[18px] md:text-[16px] text-[14px] font-semibold lowercase">
							impressions:<span class="text-[#d63a2e] ml-1 md:ml-1.5 lg:ml-1.5 xl:ml-2 font-bold">100m+</span>
						</p>
					</div>
				</div>

				{/* Footer Text */}
				<div class="pt-2 md:pt-3 lg:pt-3 xl:pt-4">
					<p class="text-[#010101] xl:text-[32px] lg:text-[18px] md:text-[16px] text-[14px] font-semibold leading-tight lowercase">
						across all times10 ignite your fire<br />instagram content
					</p>
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	/* Ensure all text is lowercase */
	section p,
	section h2,
	section h3 {
		text-transform: lowercase;
	}
</style>
