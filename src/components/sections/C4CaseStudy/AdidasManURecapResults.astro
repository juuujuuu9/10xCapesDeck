---
import { LazyImage } from '../../LazyImage.tsx';

export interface Props {
	phoneImage: {
		src: string;
		alt: string;
		pullZone?: string;
		priority?: boolean;
		width?: number;
		quality?: number;
	};
	id?: string;
}

const { phoneImage, id } = Astro.props;
---

<section id={id} class="w-full h-dvh max-h-dvh p-2 md:p-4 pt-20 pb-8 md:pb-4 lg:p-8 lg:p-8 snap-start snap-always flex flex-col overflow-hidden box-border bg-[#f4f4f0]">
	<div class="flex-1 min-h-0 flex flex-col lg:flex-row gap-2 md:gap-4 lg:gap-8">
		{/* Phone Mockup - appears at top on mobile, left on desktop */}
		<div class="flex-1 min-h-0 relative flex items-center justify-center">
			<LazyImage
				client:visible
				src={phoneImage.src}
				alt={phoneImage.alt}
				pullZone={phoneImage.pullZone}
				priority={phoneImage.priority || false}
				width={phoneImage.width || 800}
				quality={phoneImage.quality || 85}
				className="w-full h-full object-contain"
			/>
		</div>

		{/* Text Content - appears at bottom on mobile, right on desktop */}
		<div class="flex-1 min-h-0 flex flex-col items-center lg:items-start justify-center">
			<div class="space-y-3 md:space-y-4 lg:space-y-5 xl:space-y-6 max-w-[650px] w-full text-center lg:text-left">
				{/* Main Title */}
				<div class="flex flex-col items-center justify-center lg:items-start lg:justify-start gap-2">
					<h2 class="text-[#010101] xl:text-[52px] lg:text-[48px] md:text-[36px] text-[26px] font-bold leading-tight lowercase sm:max-w-none max-w-[333px]">
						adidas x Manchester United Recap
					</h2>
					<h3 class="text-[#010101] font-sans xl:text-[32px] lg:text-[28px] md:text-[24px] text-[20px] font-semibold leading-tight lowercase sm:max-w-none">
						How much did the world like it?:
					</h3>
				</div>

				{/* Stats */}
				<div class="space-y-2 md:space-y-3 lg:space-y-3 xl:space-y-4">
					{/* Views */}
					<div class="flex items-center justify-center lg:justify-start gap-2 md:gap-3 lg:gap-3 xl:gap-4">
						<div class="w-6 h-6 md:w-7 md:h-7 lg:w-7 lg:h-7 xl:w-8 xl:h-8 rounded-full bg-[#010101] flex items-center justify-center shrink-0">
							<svg class="w-3 h-3 md:w-3.5 md:h-3.5 lg:w-3.5 lg:h-3.5 xl:w-4 xl:h-4" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M12 4.5C7 4.5 2.73 7.61 1 12C2.73 16.39 7 19.5 12 19.5C17 19.5 21.27 16.39 23 12C21.27 7.61 17 4.5 12 4.5ZM12 17C9.24 17 7 14.76 7 12C7 9.24 9.24 7 12 7C14.76 7 17 9.24 17 12C17 14.76 14.76 17 12 17ZM12 9C10.34 9 9 10.34 9 12C9 13.66 10.34 15 12 15C13.66 15 15 13.66 15 12C15 10.34 13.66 9 12 9Z" fill="white"/>
							</svg>
						</div>
						<p class="text-[#010101] xl:text-[32px] lg:text-[18px] md:text-[16px] text-[14px] font-semibold lowercase">
							views:<span class="text-[#d63a2e] ml-1 md:ml-1.5 lg:ml-1.5 xl:ml-2 font-bold">1m</span>
						</p>
					</div>

					{/* Likes */}
					<div class="flex items-center justify-center lg:justify-start gap-2 md:gap-3 lg:gap-3 xl:gap-4">
						<div class="w-6 h-6 md:w-7 md:h-7 lg:w-7 lg:h-7 xl:w-8 xl:h-8 rounded-full bg-[#010101] flex items-center justify-center shrink-0">
							<svg class="w-3 h-3 md:w-3.5 md:h-3.5 lg:w-3.5 lg:h-3.5 xl:w-4 xl:h-4" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M12 21.35L10.55 20.03C5.4 15.36 2 12.27 2 8.5C2 5.41 4.42 3 7.5 3C9.24 3 10.91 3.81 12 5.08C13.09 3.81 14.76 3 16.5 3C19.58 3 22 5.41 22 8.5C22 12.27 18.6 15.36 13.45 20.03L12 21.35Z" fill="white"/>
							</svg>
						</div>
						<p class="text-[#010101] xl:text-[32px] lg:text-[18px] md:text-[16px] text-[14px] font-semibold lowercase">
							likes:<span class="text-[#d63a2e] ml-1 md:ml-1.5 lg:ml-1.5 xl:ml-2 font-bold">41k</span>
						</p>
					</div>

					{/* Comments */}
					<div class="flex items-center justify-center lg:justify-start gap-2 md:gap-3 lg:gap-3 xl:gap-4">
						<div class="w-6 h-6 md:w-7 md:h-7 lg:w-7 lg:h-7 xl:w-8 xl:h-8 rounded-full bg-[#010101] flex items-center justify-center shrink-0">
							<svg class="w-3 h-3 md:w-3.5 md:h-3.5 lg:w-3.5 lg:h-3.5 xl:w-4 xl:h-4" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M20 2H4C2.9 2 2.01 2.9 2.01 4L2 22L6 18H20C21.1 18 22 17.1 22 16V4C22 2.9 21.1 2 20 2ZM18 14H6V12H18V14ZM18 11H6V9H18V11ZM18 8H6V6H18V8Z" fill="white"/>
							</svg>
						</div>
						<p class="text-[#010101] xl:text-[32px] lg:text-[18px] md:text-[16px] text-[14px] font-semibold lowercase">
							comments:<span class="text-[#d63a2e] ml-1 md:ml-1.5 lg:ml-1.5 xl:ml-2 font-bold">130k</span>
						</p>
					</div>

					{/* Shares */}
					<div class="flex items-center justify-center lg:justify-start gap-2 md:gap-3 lg:gap-3 xl:gap-4">
						<div class="w-6 h-6 md:w-7 md:h-7 lg:w-7 lg:h-7 xl:w-8 xl:h-8 rounded-full bg-[#010101] flex items-center justify-center shrink-0">
							<svg class="w-3 h-3 md:w-3.5 md:h-3.5 lg:w-3.5 lg:h-3.5 xl:w-4 xl:h-4" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M18 16.08C17.24 16.08 16.56 16.38 16.04 16.85L8.91 12.7C8.96 12.47 9 12.24 9 12C9 11.76 8.96 11.53 8.91 11.3L15.96 7.19C16.5 7.69 17.21 8 18 8C19.66 8 21 6.66 21 5C21 3.34 19.66 2 18 2C16.34 2 15 3.34 15 5C15 5.24 15.04 5.47 15.09 5.7L8.04 9.81C7.5 9.31 6.79 9 6 9C4.34 9 3 10.34 3 12C3 13.66 4.34 15 6 15C6.79 15 7.5 14.69 8.04 14.19L15.16 18.34C15.11 18.55 15.08 18.77 15.08 19C15.08 20.61 16.39 21.92 18 21.92C19.61 21.92 20.92 20.61 20.92 19C20.92 17.39 19.61 16.08 18 16.08Z" fill="white"/>
							</svg>
						</div>
						<p class="text-[#010101] xl:text-[32px] lg:text-[18px] md:text-[16px] text-[14px] font-semibold lowercase">
							shares:<span class="text-[#d63a2e] ml-1 md:ml-1.5 lg:ml-1.5 xl:ml-2 font-bold">6k</span>
						</p>
					</div>

					{/* Total Attendance */}
					<div class="flex items-center justify-center lg:justify-start gap-2 md:gap-3 lg:gap-3 xl:gap-4">
						<div class="w-6 h-6 md:w-7 md:h-7 lg:w-7 lg:h-7 xl:w-8 xl:h-8 rounded-full bg-[#010101] flex items-center justify-center shrink-0">
							<svg class="w-3 h-3 md:w-3.5 md:h-3.5 lg:w-3.5 lg:h-3.5 xl:w-4 xl:h-4" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M16 11C17.66 11 19 9.66 19 8C19 6.34 17.66 5 16 5C14.34 5 13 6.34 13 8C13 9.66 14.34 11 16 11ZM8 11C9.66 11 11 9.66 11 8C11 6.34 9.66 5 8 5C6.34 5 5 6.34 5 8C5 9.66 6.34 11 8 11ZM8 13C5.67 13 1 14.17 1 16.5V19H15V16.5C15 14.17 10.33 13 8 13ZM16 13C15.71 13 15.38 13.02 15.03 13.05C16.19 13.89 17 15.15 17 16.5V19H23V16.5C23 14.17 18.33 13 16 13Z" fill="white"/>
							</svg>
						</div>
						<p class="text-[#010101] xl:text-[32px] lg:text-[18px] md:text-[16px] text-[14px] font-semibold lowercase">
							total attendance:<span class="text-[#d63a2e] ml-1 md:ml-1.5 lg:ml-1.5 xl:ml-2 font-bold">1200+</span>
						</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	/* Ensure all text is lowercase */
	section p,
	section h2,
	section h3 {
		text-transform: lowercase;
	}
</style>
