---
import '../styles/global.css';
import { bunnyImage } from '../lib/bunny-cdn';
import { LazyVideo } from '../components/LazyVideo.tsx';

const logoUrl = bunnyImage('/wp-content/uploads/2025/08/Times10-Logo-2025-2.png', {
	pullZone: 'wordpress',
	quality: 85
});

// RULE-015: Responsive logo sizes for FCP optimization
const logoMobile = bunnyImage('/wp-content/uploads/2025/08/Times10-Logo-2025-2.png', {
	pullZone: 'wordpress',
	width: 320,
	quality: 85
});

const logoDesktop = bunnyImage('/wp-content/uploads/2025/08/Times10-Logo-2025-2.png', {
	pullZone: 'wordpress',
	width: 400,
	quality: 85
});

// Brand logos for the grid
const brandImages = [
	{ path: '/wp-content/uploads/2025/08/adidas.png', alt: 'Adidas' },
	{ path: '/wp-content/uploads/2025/02/brands_0018_universal.png', alt: 'Universal' },
	{ path: '/wp-content/uploads/2025/02/brands_0008_Jordan.png', alt: 'Jordan' },
	{ path: '/wp-content/uploads/2025/02/brands_0011_MGM-resorts.png', alt: 'MGM Resorts' },
	{ path: '/wp-content/uploads/2025/02/brands_0017_simplisafe.png', alt: 'SimpliSafe' },
	{ path: '/wp-content/uploads/2025/02/brands_0013_nike.png', alt: 'Nike' },
	{ path: '/wp-content/uploads/2025/02/brands_0004_C4.png', alt: 'C4' },
	{ path: '/wp-content/uploads/2025/02/brands_0010_melo.png', alt: 'Melo' },
	{ path: '/wp-content/uploads/2025/02/brands_0016_Shoe-Palace.png', alt: 'Shoe Palace' },
	{ path: '/wp-content/uploads/2025/02/brands_0003_Best-Buy.png', alt: 'Best Buy' },
	{ path: '/wp-content/uploads/2025/02/brands_0001_arnold-tahuer.png', alt: 'Arnold Tahuer' },
	{ path: '/wp-content/uploads/2025/02/brands_0002_Attomax.png', alt: 'Attomax' },
	{ path: '/wp-content/uploads/2025/02/brands_0015_Roscoes.png', alt: 'Roscoes' },
	{ path: '/wp-content/uploads/2025/02/brands_0005_Derrick-Rose.png', alt: 'Derrick Rose' },
	{ path: '/wp-content/uploads/2025/08/flerish-logo.png', alt: 'Flerish' },
	{ path: '/wp-content/uploads/2025/02/brands_0007_interscope.png', alt: 'Interscope' },
	{ path: '/wp-content/uploads/2025/02/brands_0012_monster.png', alt: 'Monster' },
	{ path: '/wp-content/uploads/2025/02/brands_0019_WB.png', alt: 'WB' },
	{ path: '/wp-content/uploads/2025/02/brands_0006_Foot-locker.png', alt: 'Foot Locker' },
	{ path: '/wp-content/uploads/2025/02/brands_0014_PuraVida.png', alt: 'Pura Vida' },
];

// Direct video file approach
const reelVideoPoster = bunnyImage('/posters/Times10-Reel-AaronCut-V7-09012025.jpg', {
	pullZone: 'storage',
	width: 1920,
	quality: 85
});
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>times10</title>

		<!-- RULE-014: Preload critical assets for FCP -->
		<link 
			rel="preload" 
			as="image" 
			href={logoMobile} 
			media="(max-width: 639px)" 
		/>
		<link 
			rel="preload" 
			as="image" 
			href={logoDesktop} 
			media="(min-width: 640px)" 
		/>

		<!-- Preload critical fonts to avoid FOIT -->
		<link
			rel="preload"
			href="/fonts/AktivGrotesk-Bold.woff2"
			as="font"
			type="font/woff2"
			crossorigin
		/>
	</head>
	<body class="font-sans overflow-x-hidden bg-[#fdfffd]">
		<section class="bg-[#f4f4f0] w-full max-w-screen mx-auto h-dvh flex items-center justify-center snap-start snap-always">
			<img
				src={logoDesktop}
				srcset={`${logoMobile} 320w, ${logoDesktop} 400w`}
				sizes="(max-width: 639px) 320px, 400px"
				alt="times10 logo"
				class="sm:max-w-[400px] max-w-80 max-h-full object-contain"
				loading="eager"
				width="400"
				height="100"
			/>
		</section>
		<section class="w-full max-w-screen mx-auto h-dvh flex flex-col items-center justify-center snap-start snap-always">
			<h2 class="mb-12 sm:text-4xl text-2xl font-bold text-center">brands we've worked with</h2>
			<div class="grid grid-cols-5 gap-8 w-full xl:max-w-4xl lg:max-w-3xl md:max-w-2xl sm:max-w-1xl h-auto">
				{brandImages.map((brand) => {
					const imageUrl = bunnyImage(brand.path, {
						pullZone: 'wordpress',
						width: 300,
						quality: 75
					});
					return (
						<div class="aspect-square flex items-center justify-center">
							<img
								src={imageUrl}
								alt={brand.alt}
								class="w-full h-full object-contain"
								loading="lazy"
							/>
						</div>
					);
				})}
			</div>
		</section>
		<section class="w-full max-w-screen mx-auto h-dvh flex flex-col items-center justify-center snap-start snap-always p-0">
			<LazyVideo
				client:visible
				src="/Times10-Reel-AaronCut-V7-09012025.mp4"
				poster={reelVideoPoster}
				pullZone="storage"
				autoPlay
				muted
				loop
				playsInline
				usePlyr={true}
				className="w-full h-full object-cover"
			/>
		</section>
		<section class="w-full bg-black max-w-screen mx-auto h-dvh flex flex-col gap-4 items-center justify-center snap-start snap-always lg:p-8 p-4">
			<div class="flex flex-row gap-4 w-full h-full items-center justify-center">
				<div class="border-2 border-[#2a2a2a] p-8 flex flex-col w-full h-full items-center justify-center rounded-4xl">
					
				</div>
				<div class="border-2 border-[#2a2a2a] p-8 flex flex-col w-full h-full items-center justify-center rounded-4xl">

				</div>
			</div>
			<div class="flex flex-row gap-4 w-full h-full items-center justify-center">
				<div class="border-2 border-[#2a2a2a] p-8 flex flex-col w-full h-full items-center justify-center rounded-4xl">
					
				</div>
				<div class="border-2 border-[#2a2a2a] p-8 flex flex-col w-full h-full items-center justify-center rounded-4xl">

				</div>
				<div class="border-2 border-[#2a2a2a] p-8 flex flex-col w-full h-full items-center justify-center rounded-4xl">

				</div>
			</div>
			<div class="border-2 border-[#2a2a2a] p-8 flex flex-col w-full h-full items-center justify-center rounded-3xl max-h-[60px]">
				<span class="text-white text-sm lowercase text-[24px] flex flex-row gap-3"><strong>AI IS HERE.</strong> <em> IT'S NOT SOMETHING WE FEAR BUT USE AS A TOOL TO CREATE BETTER WORKFLOWS AND ENGAGING CONTENT.</em></span>
			</div>
		</section>
	</body>
</html>
